<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="600.0" style="-fx-background-color: #000F43;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mtr.leotasks.Home_ListCreationController">
   <children>
      <VBox layoutX="2.0" layoutY="4.0" prefHeight="250.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="popuptitle" stylesheets="@styles.css" text="Name your list" />
            <TextField fx:id="listNameEntry" alignment="CENTER" prefHeight="48.0" prefWidth="600.0" promptText="List name MUST be unique">
               <VBox.margin>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="600.0">
               <children>
                  <Button fx:id="createListBtn" disable="true" mnemonicParsing="false" onAction="#createList" stylesheets="@styles.css" text="Confirm" textFill="WHITE" />
               </children>
            </HBox>
            <Label fx:id="warningLabel" alignment="CENTER" prefHeight="21.0" prefWidth="600.0" styleClass="warninglabel" stylesheets="@styles.css" text="THERE'S ALREADY A LIST WITH THIS NAME" visible="false">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
