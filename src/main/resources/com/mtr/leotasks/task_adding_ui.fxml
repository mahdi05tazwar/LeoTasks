<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="600.0" style="-fx-background-color: #000F43;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mtr.leotasks.Tasks_TaskAddingController">
   <children>
      <VBox layoutX="2.0" layoutY="4.0" prefHeight="250.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="popuptitle" stylesheets="@styles.css" text="Add a task" />
            <HBox alignment="CENTER">
               <children>
                  <DatePicker fx:id="dateEntry" editable="false" prefHeight="30.0" prefWidth="200.0" promptText="Date" />
                  <ComboBox fx:id="hourComboBox" promptText="Hour" />
                  <ComboBox fx:id="minuteComboBox" promptText="Minute" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="taskEntry" alignment="CENTER" prefHeight="50.0" prefWidth="540.0" promptText="Task caption MUST be unique in this list" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="600.0">
               <children>
                  <Button fx:id="addTaskBtn" disable="true" mnemonicParsing="false" onAction="#addTask" stylesheets="@styles.css" text="Confirm" textFill="WHITE" />
               </children>
            </HBox>
            <Label fx:id="warningLabel" alignment="CENTER" prefHeight="21.0" prefWidth="600.0" styleClass="warninglabel" stylesheets="@styles.css" text="THIS TASK ALREADY EXISTS IN THIS LIST!" visible="false">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
